.select-box .head-search .input {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  line-height: 60rpx;
  color: #6a6a6a;
}
.select-box .head-search .sign {
  height: 40rpx;
  width: 2rpx;
  background: #646566;
  margin: 0 20rpx 0 0;
}
.select-box .head-search .city-name {
  font-size: 30rpx;
  font-weight: bold;
  line-height: 60rpx;
  color: #333;
  padding: 0 20rpx;
}
.select-box .null-text {
  color: #333;
  text-align: center;
  margin-top: 100rpx;
}
.select-box .localtion-name {

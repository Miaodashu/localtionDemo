  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.select-box .head-box .cancle-text {
  margin-left: 30rpx;
  color: red;
  font-size: 30rpx;
}
.select-box .head-search {
  height: 60rpx;
  margin: 20rpx 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
